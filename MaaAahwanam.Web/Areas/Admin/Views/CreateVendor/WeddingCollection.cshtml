    @*E-Mail ID validation*@
    <script type="text/javascript">
    function ValidateEmail(email) {
        var expr = /^[_a-z0-9-]+(\.[_a-z0-9-]+)*@@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/;
        return expr.test(email);
    };
    </script>
