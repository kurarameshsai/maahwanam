
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/NmasterPage.cshtml";
}

<div class="sb2-2-3">
    <div class="col-md-12">
        <div class="box-inn-sp">
            <div class="inn-title">



                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Quotation ID</th>
                                <th>Quotation Date</th>
                                <th>Requested User</th>
                                <th>Occasion Date</th>
                                <th>Guests</th>
                                <th>Requirements</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.quotations)
                            {
                                <tr class="even gradeX">
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        <h5>@item.UpdatedTime</h5>
                                    </td>
                                    <td>
                                        <h5>
                                            <p>User Name :  @item.Name</p>
                                            <p>Email ID  :  @item.EmailId</p>
                                            <p>Phone No  :  @item.PhoneNo</p>
                                        </h5>
                                    </td>
                                    <td>
                                        <h5>@item.EventStartDate</h5>
                                    </td>
                                    <td>
                                        @item.Persons
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        @item.Status
                                    </td>
                                    <td>
                                        <a href="/Admin/quotationlist/QuoteReply?id=@item.Id" class="btn btn-default btn-xs"> Reply Quote </a>
                                        @*<a href="#" class="btn btn-default btn-xs">Delete</a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>