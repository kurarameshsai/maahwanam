


<style>
    .accordion {
        background-color: #eee;
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
        transition: 0.4s;
    }

        .active, .accordion:hover {
            background-color: #ccc;
        }

        .accordion:after {
            content: '\002B';
            color: #777;
            font-weight: bold;
            float: right;
            margin-left: 5px;
        }

    .active:after {
        content: "\2212";
    }

    .panel {
        padding: 0 18px;
        background-color: white;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }

    header a {
        color: black;
    }

    .services {
        padding: 15px 15px 15px 20px;
    }

        .services div, .services div > a {
            cursor: pointer;
            font-size: 14px;
            font-family: lato;
            color: black;
        }
</style>
<div class="services">
    <div onclick="location.href = '/admin/adb'">Dashboard</div>
    <div onclick="location.href = '/admin/Quotationlist'">Quotes</div>
    <div onclick="location.href = '/admin/enquiry'">Enquiry</div>
    <div onclick="location.href = '/admin/norders/Index'">Orders</div>
    <div onclick="location.href = '/admin/customers/Index'">Customers/clients</div>
    <div onclick="location.href = '/'">Suppliers</div>
    <div class="row" style="padding-top:2%">
        <button class="accordion" id="sidebaracc1" style="background-color: #fff;padding: 0;"> Resellers/Partners</button>
        <div class="panel" style="overflow-y:scroll">
            <div onclick="location.href = '/admin/rm'"> Add Resellers/Partners</div>
            @if (ViewBag.allresellers != null)
            {
                foreach (var users in ViewBag.allresellers)
                {

                    <div><a href="/admin/rm?partid=@users.PartnerID"> @users.PartnerName</a></div>
                }
            }
        </div>

        <button class="accordion" id="sidebaracc2" style="background-color: #fff;padding: 0;">Vendors</button>
        <div class="panel" style="overflow-y:scroll">
            <div onclick="location.href = '/admin/vendor/Index?type=Venue'">Venue</div>
            <div onclick="location.href = '/admin/vendor/Index?type=Catering'">Catering</div>
            <div onclick="location.href = '/admin/vendor/Index?type=Decorator'">Decorator</div>
            <div onclick="location.href = '/admin/vendor/Index?type=Photography'">Photography</div>
            <div onclick="location.href = '/admin/vendor/Index?type=Others'">Others</div>
        </div>
    </div>


</div>



<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
            } else {
                // panel.style.maxHeight = panel.scrollHeight + "px";
                $(this).next('.panel').css('display', 'block').css('max-height', '500px');
            }
        });
    }

    $(document).on('click', '#sidebaracc1', function () {
        $(this).next('.panel').css('display', 'block').css('max-height', '200px');
    });
    $(document).on('click', '#sidebaracc2', function () {
        $(this).next('.panel').css('display', 'block').css('max-height', '200px');
    });
</script>