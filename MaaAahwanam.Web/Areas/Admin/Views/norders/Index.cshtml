                                <th>Status</th>
                                <th>Amount</th>
                                <th>Address</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.OrdersList)
                            {
                                <tr class="even gradeX">
                                    <td>
                                        @if (item.Isdeal.Contains("1") == true)
                                        {
                                            <h5>@item.OrderId</h5><p>(Deal)</p>
                                        }
                                        else
                                        {
                                            <h5>@item.OrderId</h5>
                                        }
                                    </td>
                                    <td>
                                        <h5>@item.OrderDate.ToShortDateString()</h5>
                                    </td>
                                    <td>
                                        <h5>@item.Status</h5>
                                    </td>
                                    <td>
                                        <h5><p>Rs.@item.TotalPrice</p></h5>
                                    </td>
                                    <td>
                                        <h5>
                                            <p>User Name :  @item.FirstName @item.LastName</p>
                                            <p>Email ID  :  @item.username</p>
                                            <p>Landmark  :  @item.Landmark</p>
                                        </h5>
                                    </td>
                                    <td>
                                        <button class="" style="background: #167ee6;color: #fff !important;" onclick="window.location.href='/Admin/Orders/OrderDetails?id=@item.OrderId'" value="" id=""> View </button>
