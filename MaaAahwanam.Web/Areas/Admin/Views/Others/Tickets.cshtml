@{
    ViewBag.Title = "Tickets";
    Layout = "~/Areas/Admin/Views/Shared/MainMaster.cshtml";
}

@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
@*<link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">*@
    <!-- END PAGE LEVEL  STYLES -->
}

<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12" align="center">
                <h2>Issue Ticket</h2>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" align="right" style="display:none">
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to PDF" class="btn btn-default btn-circle">
                            <i class="icon-check"></i>
                        </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to Exccel" class="btn btn-primary btn-circle">
                            <i class="icon-list"></i>
                        </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Print" class="btn btn-success btn-circle">
                            <i class="icon-link"></i>
                        </button>
                    </div>                   
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Issue Id #</th>
                                            <th>Issue Type</th>
                                            <th>Severity</th>
                                            <th>Raised Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Tickets)
                                        {
                                            <tr class="even gradeX">
                                                <td>
                                                    @item.TicketId
                                                </td>
                                                <td>
                                                    @item.IssueType
                                                </td>
                                                <td>
                                                    @item.Severity
                                                </td>
                                                <td>
                                                    @item.UpdatedDate.ToShortDateString()
                                                </td>
                                                <td>
                                                    @item.Status
                                                </td>
                                                <td>
                                                    <a href="/Admin/Others/TicketDetails?id=@item.TicketId" class="btn btn-default btn-xs"> View </a>
                                                    <a href="#" class="btn btn-default btn-xs">Delete</a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                    </table>
                                    
                            </div>
                        </div>                    
                </div>
            </div>
        </div>
    </div>
</div>
<!--END PAGE CONTENT -->
@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable({
                "order": [[0, "desc"]]
            }); @*{ "pageLength": 5 }*@
        });
    </script>
}
