<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12" align="center">
                <h2>Quotations</h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    @*<div class="panel-heading" align="right" style="display:none">
                            <button type="button" data-toggle="tooltip" data-placement="top" title="Export to PDF" class="btn btn-default btn-circle"><i class="icon-check"></i> </button>
                            <button type="button" data-toggle="tooltip" data-placement="top" title="Export to Exccel" class="btn btn-primary btn-circle"><i class="icon-list"></i> </button>
                            <button type="button" data-toggle="tooltip" data-placement="top" title="Print" class="btn btn-success btn-circle"><i class="icon-link"></i> </button>
                        </div>*@
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Quotation ID</th>
                                        <th>Quotation Date</th>
                                        <th>Requested User</th>
                                        <th>Occasion Date</th>
                                        <th>Guests</th>
                                        <th>Requirements</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.quotations)
                                    {
                                        <tr class="even gradeX">
                                            <td>
                                                @item.Id
                                            </td>
                                            <td>
                                                <h5>@item.UpdatedTime</h5>
                                            </td>
                                            <td>
                                                <h5>
                                                    <p>User Name :  @item.Name</p>
                                                    <p>Email ID  :  @item.EmailId</p>
                                                    <p>Phone No  :  @item.PhoneNo</p>
                                                </h5>
                                            </td>
                                            <td>
                                                <h5>@item.EventStartDate</h5>
                                            </td>
                                            <td>
                                                @item.Persons
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                                @item.Status
                                            </td>
                                            <td>
                                                <a href="/Admin/Quotations/QuoteReply?id=@item.Id" class="btn btn-default btn-xs"> Reply Quote </a>
                                                @*<a href="#" class="btn btn-default btn-xs">Delete</a>*@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END PAGE CONTENT -->
