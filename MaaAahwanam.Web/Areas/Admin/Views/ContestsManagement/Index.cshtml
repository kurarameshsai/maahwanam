@model MaaAahwanam.Models.ContestMaster
@{
    ViewBag.Title = "Contests";
    Layout = "~/Areas/Admin/Views/Shared/MainMaster.cshtml";
    var i = 0;
}
@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">*@
    <!-- END PAGE LEVEL  STYLES -->
}

@using (Html.BeginForm())
{
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12" align="center">
                <h2>Contest Management</h2>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" align="left">
                        <a href="/Admin/ContestsManagement?type=New" class="btn btn-primary btn-xs">Create New Contest</a>
                    </div>
                        <div class="panel-heading" align="right" style="display:none">
                            <button type="button" data-toggle="tooltip" data-placement="top" title="Export to PDF" class="btn btn-default btn-circle">
                                <i class="icon-check"></i>
                            </button>
                            <button type="button" data-toggle="tooltip" data-placement="top" title="Export to Exccel" class="btn btn-primary btn-circle">
                                <i class="icon-list"></i>
                            </button>
                            <button type="button" data-toggle="tooltip" data-placement="top" title="Print" class="btn btn-success btn-circle">
                                <i class="icon-link"></i>
                            </button>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Contest Name</th>
                                            <th>Created date</th>
                                            <th>Updated Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.contests)
                                        {
                                            <tr class="even gradeX">
                                                <td>
                                                    @(++i)
                                                </td>
                                                <td>
                                                    @item.ContestName
                                                </td>
                                                <td>
                                                    @item.CreatedDate.ToShortDateString()
                                                </td>
                                                <td>
                                                    @item.UpdatedDate.ToShortDateString()
                                                </td>
                                                <td>
                                                    @item.Status
                                                </td>
                                                <td>
                                                    <a href="/Admin/ContestsManagement?id=@item.ContentMasterID" class="btn btn-primary btn-xs"> View </a>
                                                    <a href="/Admin/ContestsManagement/RemoveContest?id=@item.ContentMasterID" class="btn btn-danger btn-xs"> Delete </a>
                                                    @*<a href="/Admin/ContestsManagement?id=@item.ContentMasterID" class="btn btn-default btn-xs">Delete</a>*@
                                                    @*<input type="button" name="command" value="Delete" formaction="/Admin/ContestsManagement?id=@item.ContentMasterID" class="btn btn-danger btn-xs" />*@
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                        </div>

                    @if (ViewBag.display == "1")
                    {
                        <div class="form-group">
                            <label class="control-label col-lg-4">Enter Contest Name</label>
                            <div class="col-lg-4">
                                <input type="text" id="ContestName" name="ContestName" class="form-control" value="@ViewBag.contestname" />
                            </div>
                            @if (Request.QueryString["type"] == "New")
                            {<input type="submit" id="btnsearch" name="command" value="Add" class="btn btn-success" />}
                            else
                            {<input type="submit" id="btnsearch" name="command" value="Update" class="btn btn-primary" />}

                            @*<input type="submit" name="command" value="Cancel" class="btn btn-danger" />*@
                            <a href="/Admin/ContestsManagement/CancelContest" class="btn btn-danger">Cancel</a>
                        </div>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>
}
<!--END PAGE CONTENT -->
@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable({
                "order": [[0, "desc"]]
            }); @*{ "pageLength": 5 }*@
        });
    </script>
}