@{
    ViewBag.Title = "Order Details";
    Layout = "~/Areas/Admin/Views/Shared/MainMaster.cshtml";
}

@section header{
    <!-- PAGE LEVEL STYLES -->
    <link href="~/Assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
}

<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12" align="center">
                <h2> Order Description</h2>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-12">
                    <div class="body collapse in" id="div1"> <a href="/Admin/Dashboard/dashboard" class="btn btn-primary btn-xs">Home</a>&nbsp;&nbsp;&nbsp;<a href="/Admin/Orders/AllOrders" class="btn btn-primary btn-xs">Orders</a>&nbsp;&nbsp;&nbsp;<a href="#" class="btn btn-primary btn-xs">Order Details</a> </div>

                </div>
                <h4>Order ID: @ViewBag.orderid</h4>
                <div class="panel panel-default">

                    <div class="panel-heading" style="display:none">
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to PDF" class="btn btn-default btn-circle">
                            <i class="icon-check"></i>
                        </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Export to Exccel" class="btn btn-primary btn-circle">
                            <i class="icon-list"></i>
                        </button>
                        <button type="button" data-toggle="tooltip" data-placement="top" title="Print" class="btn btn-success btn-circle">
                            <i class="icon-link"></i>
                        </button>
                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Item Id</th>
                                        <th>Item Details</th>
                                        <th>Vendor Details</th>
                                        <th>Order Date</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.OrderDetailsList)
                                    {
                                        <tr class="even gradeX">
                                        <td>@item.OrderId</td>
                                        <td>@if (item.ServiceType != null && item.Quantity != 0)
                                        { <p>@item.ServiceType, <br /> Quantity: @item.Quantity</p> }
                                            else { <p>Not Available</p> }</td>
                                        <td>@item.BusinessName,<br />@item.Address,@item.Landmark<br />@item.City</td>
                                        <td>@item.UpdatedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                                        <td> @if (item.Isdeal == true)  { <p>Deal Price:Rs.@item.PerunitPrice</p> }
                                            else { <p>Rs.@item.PerunitPrice</p> }
                                        </td>
                                    </tr>
                                    }
                                    @*<tr class="even gradeX">
                                        <td>1</td>
                                        <td>Birthday Cards,<br />Quantity:80,<br />Cardtype:Card with Print,<br />Design ID:1090</td>
                                        <td>Sai Printers,<br />Yousufguda,<br />Hyderabad,<br />Vendor Rating:4/5</td>
                                        <td>1/09/2015</td>
                                        <td>10,000</td>
                                    </tr>*@
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END PAGE CONTENT -->
@section Bottom{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>

    <script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
}
