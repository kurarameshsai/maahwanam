
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/NmasterPage.cshtml";
}

<div class="sb2-2-3">
    <div class="col-md-12">
        <div class="box-inn-sp">
         
                    <h3>Vendor Type :@ViewBag.type</h3>
    
    <div class="inn-title">
        <div class="table-responsive">
            @if (ViewBag.VendorList != null)
            {
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    @*style="width:100%"*@
                    <thead>
                        <tr>
                            <th style="display:none">Vendorid</th>
                            <th>Req #</th>
                            <th>Req Date</th>
                            <th>Vendor name</th>
                            <th>Category Type</th>   @*<th>Service Type</th>*@
                            <th>Mobile</th>
                            <th>Location</th>
                            <th>Service Cost</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.VendorList)
                        {
                            <tr class="even gradeX">
                                <td style="display:none">@item.VendorServiceId</td>
                                <td>
                                    @item.VendorMasterId
                                </td>
                                <td>
                                    @*@string.Format(@item.UpdatedDate.ToString(),"{0:MM/dd/yyyy}")*@
                                    @*@item.UpdatedDate.ToShortDateString()*@
                                    @item.UpdatedDate
                                </td>
                                <td>
                                    @item.BusinessName
                                    @*<p>UserName:@item.UserName</p><p>Password:@item.Password</p>*@
                                </td>
                                <td>
                                    @if (item.VenueType != null)
                                    {
                                        //@item.VenueType
                                        @Html.Raw(Html.Encode(item.VenueType).Replace(",", ",<br />"))<br />
                                    }
                                    @if (item.VenueType == null)
                                    {
                                        <p>Not Available</p>
                                    }
                                </td>
                                <td>
                                    @item.ContactNumber
                                </td>
                                <td>
                                    @item.address,@item.Landmark
                                </td>
                                <td>
                                    @if (item.VenueType != null || item.UnitPrice != null)
                                    {
                                        //@item.VenueType<br />
                                        if (item.VenueType == "Banquet Hall")
                                        {
                                            //if (item.food == "Veg")
                                            //{
                                            <p>Veg Lunch Price Starts From : Rs.@item.cost1</p>
                                            <p>Veg Dinner Price Starts From : Rs.@item.cost2</p>
                                            //}
                                            //if (item.food == "Non-Veg")
                                            //{
                                            <p>Non-Veg Lunch Price Starts From : Rs.@item.cost3</p>
                                            <p>Non-Veg Dinner Price Starts From : Rs.@item.cost4</p>
                                            //}
                                        }
                                        else if (ViewBag.type == "Others" || ViewBag.type == "Photography" || ViewBag.type == "Decorator")
                                        {
                                            <p> Price Starts From : Rs.@item.UnitPrice</p>
                                        }
                                        else
                                        {
                                            <p> Price Starts From : Rs.@item.cost1</p>
                                            @*@Html.Raw(Html.Encode(item.cost1).Replace(",", "<br />"))<br />*@
                                        }

                                    }
                                    @if (item.VenueType == null && item.UnitPrice == null)
                                    {
                                        <p>Not Available</p>
                                    }
                                </td>
                                <td>
                                    @*<a href="/Admin/Vendors/AllVendors?id=@item.VendorMasterId&&vid=@item.VendorServiceId" class="btn btn-primary btn-xs btn-rect"> @item.status</a>
                                        <input type="submit" class="btn btn-primary btn-xs btn-rect" value="@item.status" name="command" formaction="/Admin/Vendors/AllVendors?id=@item.VendorMasterId&&vid=@item.VendorServiceId" />*@
                                    <button type="submit" class="btn btn-primary btn-xs btn-rect" value="confirm" name="command" formaction="/Admin/vendor/AllVendors?id=@item.VendorMasterId&&vid=@item.VendorServiceId">@item.status</button>
                                </td>
                                <td>
                                    <a href="/Admin/vendor/Venue?id=@item.VendorMasterId&&vid=@item.VendorServiceId&&op=display#"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                    <a href="/Admin/vendor/AllVendors?id=@item.VendorMasterId&&vid=@item.VendorServiceId"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a href="#"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                    @*<input type="submit" class="btn-default btn-xs" value="View" name="command" formaction="/Admin/vendor/AllVendors?id=@item.VendorMasterId&&vid=@item.VendorServiceId" />
                                    <input type="submit" class="btn-default btn-xs" value="Edit" name="command" formaction="/Admin/vendor/AllVendors?id=@item.VendorMasterId&&vid=@item.VendorServiceId" />
                                    <input type="submit" class="btn btn-default btn-xs" value="Delete" name="command" />*@
                                    <br />
                                    <br />
                                    @if (item.ServicType == "Venue")
                                    {
                                        <input type="submit" class="btn btn-default btn-xs" value="Add New" name="command" formaction="/Admin/vendor/AllVendors?id=@item.VendorMasterId&&vid=@item.VendorServiceId" style="width:128px;" />
                                    }
                                    @*<a href="/Admin/Vendors/AllVendors" class="btn btn-default btn-xs">Edit</a>
        <a href="#" class="btn btn-default btn-xs">Delete</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            @if (ViewBag.VendorList == null)
            {
                <h3 align="center">Select a Service To View Records</h3>
            }
        </div>
    </div>
</div>
            </div>
    </div>

