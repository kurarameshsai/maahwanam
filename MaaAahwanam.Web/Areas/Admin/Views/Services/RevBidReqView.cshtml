<!--PAGE CONTENT -->
<div id="content">
    <div class="inner">
        <div class="row">
            <div class="col-lg-12" align="center">
                <h2> Reverse Bid Request Details</h2>
            </div>
        </div>
        <hr />
        @foreach (var item in ViewBag.vendordetails)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="body collapse in" id="div1"> <a href="/Admin/Dashboard/dashboard" class="btn btn-primary btn-xs">Home</a>&nbsp;&nbsp;&nbsp;<a href="/Admin/Services/RevBidRequests" class="btn btn-primary btn-xs">Reverse Bid Requests</a>&nbsp;&nbsp;&nbsp;<a href="#" class="btn btn-primary btn-xs">Reverse Bid Request Details</a> </div>
                    <br />
                    <h4><i class="icon-th-list"></i> Request # @item.RequestId | @item.UpdatedTime.ToShortDateString()</h4>

                </div>
                <br />
                <!-- Tabls Starts here -->

                <div class="col-lg-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading"> Request Details </div>
                        <div class="panel-body">
                            <p><b>Request #:</b> @item.RequestId </p>
                            @*<p><b>Event Name #:</b> @item.EventName </p>*@
                            <p>
                                <b>Event Start Date #:</b> @if (@item.EventStartDate != null)
                                { @item.EventStartDate.ToShortDateString() }
                                @if (@item.EventStartDate == null)
                                { <h4>Not Available</h4> }
                            </p>
                            <p>
                                <b>Event End Date #:</b> @if (@item.EventEnddate != null)
                                { @item.EventEnddate.ToShortDateString() }
                                @if (@item.EventEnddate == null)
                                { <h4>Not Available</h4> }
                            </p>

                            <p><b>Request Date:</b> @item.UpdatedTime.ToShortDateString()</p>


                            <p><b>Service Type:</b> Multiple </p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel panel-primary" style="height: 222px;">
                        <div class="panel-heading"> Customer Information </div>
                        <div class="panel-body">

                            <p><b>Customer Id :</b> @item.UserLoginId </p>
                            <p><b>Customer Name :</b> @item.FirstName @item.LastName </p>
                            <p><b>Email:</b> @item.UserName  </p> @*<a href="#" class="btn btn-primary btn-sm">Verified</a>*@
                            <p><b>Phone:</b> @item.UserPhone </p> @*<a href="#" class="btn btn-primary btn-sm">Not Verified</a>*@
                            <p><b>Address:</b> @item.Address</p>
                        </div>
                    </div>
                </div>
                <!-- Tabs Ends here -->
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading"> Reverse Bid Details </div>
                        <div class="panel-body">
                            <p><b>Location:</b> @item.EventAddress,@item.EventLocation</p>
                            <p><b>Services:</b> @item.ServiceType </p>
                            <p><b>Vendor Name:</b>@ViewBag.vendorname</p>
                            <p><b>Preferences:</b>@item.Preferences</p>
                            <p><b>Budget:</b> @item.Budget (INR) </p>
                            <p><b>Reverse Bid Resp Due Date:</b> @item.UpdatedTime.ToShortDateString() </p>
                        </div>
                    </div>
                </div>
            </div>
        }
