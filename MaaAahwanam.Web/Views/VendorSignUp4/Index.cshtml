
@{
    ViewBag.Title = ":: Vendor Sign Up 4 ::";
    Layout = "~/Views/SharedWeb/VendorMasterPage.cshtml";
}


<div class="container border-default">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 margin-top">
            <h4>Create a Free Ahwanam account</h4>
        </div>
    </div>
    <div class="row progress-area text-center">
        <div class="progress-ui">
            <div class="complete"><span>1</span></div>
            <div class="complete"><span>2</span></div>
            <div class="complete"><span>3</span></div>
            <div class="complete"><span>4</span></div>
        </div>
        <div class="progress-content">
            <div>General Information</div>
            <div>Photo Gallery</div>
            <div>Details</div>
            <div>Discount %</div>
        </div>
    </div>
    <form method="post">
        <div class="block">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 form-headding border-default-top border-default-bottom">
                    <h4><i class="fa fa-tag" aria-hidden="true"></i> Discount for Ahwanam Couples</h4>
                </div>
            </div>
            <div class="row margin-top margin-bottom">
                <div class="col-xs-10 col-sm-10 col-md-10 margin-left margin-right padding-top-10 light-sky-blue-bg">
                    <p class="grey">
                        <b>
                            Offer a discount to couples who find you on Ahwanam and book your services. The greater the discount, the more appealing your storefront will be to potential clients.
                        </b>
                    </p>
                </div>
            </div>
        </div>
        <div class="block border-default margin-top-100 margin-bottom-100">
            <div class="row margin-top margin-bottom margin-left-0 margin-right-0">
                <div class="col-xs-12 col-sm-6 col-md-6 light-sky-blue-bg padding-top-50 padding-bottom-50">
                    <h4>How it works?</h4>
                    <p>Offer a discount to couples who find you on Ahwanam and book your services. The discount will only apply to services they purchase.</p>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 padding-left-0 padding-right-0  padding-top-50 padding-bottom-50">
                    @if (ViewBag.data == "10%")
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="10%" checked><span></span>
                                <span class="white discount-text red-bg border-radius-5">10%</span>
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="10%"><span></span>
                                <span class="white discount-text red-bg border-radius-5">10%</span>
                            </label>
                        </div>
                    }

                    @if (ViewBag.data == "20%")
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="20%" checked><span></span>
                                <span class="white discount-text red-bg border-radius-5">20%</span>
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="20%"><span></span>
                                <span class="white discount-text red-bg border-radius-5">20%</span>
                            </label>
                        </div>
                    }

                    @if (ViewBag.data == "30%")
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="30%" checked><span></span>
                                <span class="white discount-text red-bg border-radius-5">30%</span>
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="30%"><span></span>
                                <span class="white discount-text red-bg border-radius-5">30%</span>
                            </label>
                        </div>
                    }

                    @if (ViewBag.data == "40%")
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="40%" checked><span></span>
                                <span class="white discount-text red-bg border-radius-5">40%</span>
                            </label>
                        </div>
                    }
                    else
                    {
                        <div class="radio col-xs-6 col-sm-4 col-md-3">
                            <label>
                                <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="40%"><span></span>
                                <span class="white discount-text red-bg border-radius-5">40%</span>
                            </label>
                        </div>
                    }

                  @if (ViewBag.data != "10%" && ViewBag.data != "20%" && ViewBag.data != "30%" && ViewBag.data != "40%" && ViewBag.data != "" && ViewBag.data != null)
                  {
                    <div class="radio col-xs-6 col-sm-4 col-md-3">
                        <label>
                            <input type="radio" class="discount-radio padding-right-10" checked><span></span>
                            <span>Discount Entered</span>
                            <input type="text" id="txtdiscount" name="txtdiscount" class="form-control" value="@ViewBag.data%"/>
                        </label>
                    </div>
                  }
                  else
                  {
                    <div class="radio col-xs-6 col-sm-4 col-md-3">
                        <label>
                            <input type="radio" class="discount-radio padding-right-10" id="manual"><span></span>
                            <span>Enter Discount</span>
                            <input type="text" id="txtdiscount" name="txtdiscount" class="form-control" style="display:none" />
                        </label>
                    </div>
                  }




                    @*<div class="radio col-xs-6 col-sm-4 col-md-3">
                        <label>
                            <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="20%"><span></span>
                            <span class="white discount-text red-bg border-radius-5">20%</span>
                        </label>
                    </div>
                    <div class="radio col-xs-6 col-sm-4 col-md-3">
                        <label>
                            <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="30%"><span></span>
                            <span class="white discount-text red-bg border-radius-5">30%</span>
                        </label>
                    </div>
                    <div class="radio col-xs-6 col-sm-4 col-md-3">
                        <label>
                            <input type="radio" name="discount" class="discount-radio padding-right-10" id="discount" value="40%"><span></span>
                            <span class="white discount-text red-bg border-radius-5">40%</span>
                        </label>
                    </div>*@
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-12 padding-left-0 padding-right-0 border-default-bottom hr-line"></div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @*<a href="/VendorSeccessReg" class="btn btn-default red-bg white margin-left">Save</a>*@
                <input type="submit" value="Save" class="btn btn-default red-bg white margin-left" />
                <a href="/HomePage" class="btn btn-default red-bg white margin-left">Cancel</a>
            </div>
        </div>
    </form>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        $('#manual').click(function () {
            $('#txtdiscount').css('display', 'block');
        });

        //$('#txtdiscount').on('input',function () {
        //    $('#discount').val($('#txtdiscount').val());
        //});
    </script>
</div>
