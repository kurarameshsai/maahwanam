
<div class="w-100 px-4 py-3">
    <div class="row mx-0">
        <h3 class="noteWorthybold">
            <text id="BlockFourCategory">@ViewBag.type</text>  (@ViewBag.recordcount)
            <div class="blackBorder"></div>
        </h3>
    </div>
    @using System.Globalization
    @if (ViewBag.results.Count != 0)
    {
        <div class="row mx-0 mt-4">
            @foreach (var item in ViewBag.results)
                {
                <div class="row block w-100 productBlock">

                    <div class="col-6 col-sm-6 col-md-12 col-lg-12 col-xl-6 vendorImg topVenueBlockImg">
                        @if (Request.QueryString["stype"] != "")
                        {
                            @*<a href="/NParticularVendor?type=@ViewBag.type&&id=@item.id&&vid=@item.subid">*@
                        if (item.logo != null && item.logo != "")
                        {<img src="~/vendorimages/@item.logo" alt="@item.logo" class="img-fluid">}
                        else if (item.image != null && item.image != "")
                        {<img src="~/vendorimages/@item.image" alt="@item.image" class="img-fluid">}
                        else
                        { <img src="~/noimages.png" alt="No Image Available" class="img-fluid">}
                        @*</a>*@
                        }
                        else
                        {
                            <a href="/NParticularVendor?type=@ViewBag.type&&id=@item.id&&vid=@item.subid">
                                @if (item.logo != null && item.logo != "")
                                {<img src="~/vendorimages/@item.logo" alt="@item.logo" class="img-fluid">}
                                else if (item.image != null && item.image != "")
                                {<img src="~/vendorimages/@item.image" alt="@item.image" class="img-fluid">}
                                else
                                { <img src="~/noimages.png" alt="No Image Available" class="img-fluid">}
                            </a>
                        }
                    </div>

                    <div class="col-6 col-sm-6 col-md-12 col-lg-12 col-xl-6 px-xl-0 topVenueDetails">


                        @if (Request.QueryString["stype"] != "")
                        {
                            @*<p class="mb-0">*@
                            <p class="productName mb-0">@item.businessname</p>
                            @*</p>*@
                        }
                        else
                        {
                            @*<p class="mb-0">*@
                            <a href="/NParticularVendor?type=@ViewBag.type&&id=@item.id&&vid=@item.subid">
                                @item.businessname
                            </a>
                            @*</p>*@
                        }
                        @*<p class="mb-0 d-inline">* Veg Price/Plate Starts from</p>*@

                        @if (ViewBag.type == "Resort" || ViewBag.type == "Hotel" || ViewBag.type == "ConventionHall" || ViewBag.type == "Catering")
                        {
                            <p class="mb-0 d-inline">* Veg Price/Plate Starts from</p>
                        }
                        @if (ViewBag.type == "Decorator" || ViewBag.type == "Photography" || ViewBag.type == "Mehendi" || ViewBag.type == "Pandit")
                        {
                            <p class="mb-0 d-inline">* Basic Price Starts from</p>
                        }

                        <div class="row mx-0 mt-2">
                            <div class="vendorPrice" style="width:calc(100% - 40px);">
                                <p class="productMinPrice mb-0 themeColor d-inline">Rs. <span>@String.Format(new CultureInfo("en-IN", false), "{0:n}", Convert.ToDouble(@item.cost)).Replace(".00", "") </span>  </p>
                            </div>
                            <div class="mx-0 d-block ml-3">
                                @*<i class="fa fa-plus addCartIcn" aria-hidden="true"></i>*@
                            </div>
                        </div>

                        <div class="row mx-0">
                            @*<div class="col-12 col-md-12 col-lg-12 col-xl-8 pr-xl-0 pl-0">
                    <div class="starRating pl-0">
                        <div class="emptyStar"></div>
                        <div class="scoreStar yellowFont" style="width:51%"></div>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-12 col-xl-4 pr-xl-0 pl-0">
                    <div class="d-inline float-left yellowFont pr-xl-0 pr-2 totalReviewCount"> (<span>162</span>) </div>
                </div>*@
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-12 vendorDescrption">@item.description</div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-12 vendorAmenities">
                            @if (new string[] { "Venues", "Hotel", "Resort", "Convention Hall" }.Contains(Request.QueryString["type"]))
                                {
                                <ul>
                                    @if (item.Halltype != null && item.Halltype != "")
                                        {
                                        <li>HallType</li>
                                        }
                                    @if (item.Wifi != null && item.Wifi != "")
                                        {
                                        <li>Wifi</li>
                                        }
                                    @if (item.Rooms != null && item.Rooms != "")
                                        {
                                        <li>Rooms</li>
                                        }
                                    @if (item.Food != null && item.Food != "")
                                        {
                                        <li>Food</li>
                                        }
                                </ul>
                                }
                            @if (new string[] { "Catering" }.Contains(Request.QueryString["type"]))
                                {
                                <ul>
                                    @if (item.Livecooking != null && item.Livecooking != "")
                                        {
                                        <li>LiveCookingStation</li>
                                        }
                                </ul>
                                }
                            @if (new string[] { "Photography" }.Contains(Request.QueryString["type"]))
                                {
                                <ul>
                                    @if (item.Preweddingshoot != null && item.Preweddingshoot != "")
                                        {
                                        <li>Pre-Wedding Shoot</li>
                                        }
                                </ul>
                                }
                        </div>
                    </div>
                    <div class="row">
                        <a href="/NParticularVendor?type=@ViewBag.type&&id=@item.id&&vid=@item.subid" class="themeBgColorPrimary btnSecondary text-white text-center w-100 vendorViewMore"> View More </a>
                    </div>
                    <div class="row">
                        <span class="themeBgColorPrimary btnSecondary text-white text-center w-100 vendorAddtoCart">Add to Cart</span>
                    </div>
                </div>
            }
        </div>

        if (ViewBag.count == "1")
        {
            <div class="row mx-0 my-4 moreButton">
                <div class="mx-auto d-inline-flex">
                    <span class="themeBgColorPrimary btnSecondary text-white" onclick="Partialfour()">
                        <i class="fa fa-plus mr-1" aria-hidden="true"></i>More
                    </span>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Records Available</p>
    }
</div>
