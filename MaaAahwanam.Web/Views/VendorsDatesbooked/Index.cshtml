
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/SharedWeb/VendorMaster.cshtml";
    var i = 1;
}
<link rel="stylesheet" href="~/CSSWeb/bootstrap/css/Datatable_css.css" />
<script src="~/Assets/plugins/dataTables/jquery.dataTables.js"></script>
@section Navigation
{
    <script src="~/Assets/plugins/jquery-2.0.3.min.js"></script>
<script src="~/Assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>
    <div class="breads">
        <div class="breads_inner">
            <div class="pageWidth">
                <div class="title">
                    <h3>Dates Booked</h3>
                </div>
                <div class="breadcrumbs">
                    <ul>
                        <li><i class="breads_arrow"></i></li>
                        <li><a href="../Dashboard">Dashboard</a></li>
                        <li><i class="breads_arrow"></i></li>
                        <li>Vendor Dates Booked</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
<div class="my-profile">
    <div class="dashboardList dashboardList-nospace">
        @if (ViewBag.Vdatesbooked != null)
        {
            <table class="responsive" id="table1">
                <thead>
                    <tr>
                        <th style="width:10%">S.No</th>
                        <th style="width:20%">Start Date</th>
                        <th style="width:20%">End Date</th>
                        <th style="width:30%">Event Name</th>
                        <th style="width:45%">Event Address</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.Vdatesbooked)
                    {
                        <tr>
                            <td class="green-link">@i</td>
                            <td> @if (item.StartDate != null) { <p> @item.StartDate.ToShortDateString() </p> } else { <p> Not Available </p> } </td>
                            <td> @if (item.EndDate != null) { <p> @item.EndDate.ToShortDateString() </p> } else { <p> Not Available </p> } </td>
                            <td> @item.EventName </td>
                            <td> @item.Address </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
            @*<div class="pagination">
                <ul>
                    <li><a href="javascript:void(0)">Prev</a></li>
                    <li><a href="javascript:void(0)" class="active">1</a></li>
                    <li><a href="javascript:void(0)">2</a></li>
                    <li><a class="pagination-gap">...</a></li>
                    <li><a href="javascript:void(0)">24</a></li>
                    <li><a href="javascript:void(0)">25</a></li>
                    <li><a href="javascript:void(0)">Next</a></li>
                </ul>
            </div>*@
        }
        else
        {
            <p style="font-size:20px"> No dates booked yet </p>
        }
        
        <div class="clear"></div>
    </div>
    <div class="clear"></div>
</div>
@section scripts{
    <script type="text/javascript" src="~/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/assets/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table1').dataTable({ bFilter: false, ordering: false, bLengthChange: false, "pageLength": 5,"order": [[0, "desc"]] });
        });
    </script>
}

