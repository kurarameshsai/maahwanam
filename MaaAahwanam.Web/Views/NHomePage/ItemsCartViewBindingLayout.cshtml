@using MaaAahwanam.Web.Custom
@if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
{
    var user = (CustomPrincipal)HttpContext.Current.User;
    if (user.UserType == "Admin")
    { Response.Redirect("/Admin/Login"); }
    if (user.UserType == "Vendor")
    {
        Response.Redirect("/NUserRegistration/changeid?id=" + user.UserId + "");
    }
    if (user.UserType == "User")
    {
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a href="/Contests" class="nav-link">Contests</a>
                </li>
                <li class="nav-item active">
                    <a href="/NLiveDeals" class="nav-link">Deals <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown toggleOpen">
                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @ViewBag.username
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a href="/NUserProfile/Index" class="dropdown-item">Profile</a>
                        <a href="/NUserRegistration/SignOut" class="dropdown-item">Sign out</a>
                    </div>
                </li>
                @*<li class="nav-item">
                    <a href="#">Hi @ViewBag.username</a></li>
                    @*<li onclick="window.location.href = "><a class="nav-link text-white">Profile</a></li>

                    <li  onclick="location.href='@Url.Action("LogOff", "NUserRegistration")'"><a  class="nav-link text-white">Sign out</a></li>*@
                <li class="nav-item">
                    <a class="nav-link cartToggle" href="#">Cart(@ViewBag.cartCount)</a>
                </li>
            </ul>
        </div>

        
    }
}
else
{
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
                <a href="/Contests" class="nav-link">Contests</a>
            </li>
            <li class="nav-item">
                <a href="/NLiveDeals/Index" class="nav-link nav-link themeColor">Deals <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a href="/NUserRegistration/Index" class="nav-link themeColor">Login/Signup</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/NVendorSignUp/Index">Partner Registration</a>
            </li>
        </ul>
    </div>

}
