            .search-box2 {
                width: 94%;
            }


            .flex-row.row {
                display: flex;
                flex-wrap: wrap;
            }

                .flex-row.row > [class*='col-'] {
                    display: flex;
                    flex-direction: column;
                }

                .flex-row.row:after,
                .flex-row.row:before {
                    display: flex;
                }

            .select2-container--default .select2-selection--single {
                height: 37px;
            }

            hr {
                margin: 0;
                border: 1px lightgray solid;
            }

            .card-body {
                padding: 10px;
            }

            .card-img-top {
                height: 140px;
                width: 100%;
            }

            .card-title, .divheading {
                font-family: lato;
                font-weight: bold;
                font-size: 14px;
                margin: 0;
            }

            .card-body table, tr, td {
                border: 0px;
                padding: 0;
            }

            .ui-datepicker-inline {
                width: 100%;
            }

            .ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
                background: white;
            }

            .ui-widget-header {
                background: white;
            }
        </style>
    }
    @if (ViewBag.enable == "orders")
    {
