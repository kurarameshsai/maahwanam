@using System.Globalization
@{
    if (ViewBag.enable == "first")
    {
        ViewBag.Title = "Manage/Add Services";
    }
    else if (ViewBag.enable == "second")
    {
        ViewBag.Title = "All Services";
    }
    else
    {
        ViewBag.Title = "All Orders";
    }
    Layout = "~/Views/SharedWeb/vmp.cshtml";
}

@section css{
    @if (ViewBag.enable == "first")
    {
        <style>
            .upload-section table, tr, td {
                border: 0px;
                padding-left: 6%;
            }

            .side-content-2 input[type=text], .side-content-1 input[type=text] {
                height: 49px;
                width: 90%;
                background: #f4f5f7;
                border: 0px solid rgba(34,36,38,.15);
                font-weight: 600;
                margin-left: 15px;
                margin-top: 14px;
                border-radius: 0px;
            }

            .side-content-1 textarea {
                width: 90%;
                background: #f4f5f7;
                border: 0px solid rgba(34,36,38,.15);
                font-weight: 600;
                margin-left: 15px;
            }

            .sliderdiv, .sliderdiv1 {
                border: 4px grey solid;
                border-style: dashed;
                height: 70px;
                width: 70px;
                margin-top: 10px;
            }

                .sliderdiv img, .sliderdiv1 img {
                    padding: 20px;
                }

                .sliderdiv input[type=file], .sliderdiv1 input[type=file] {
                    display: none;
                }

            #pkgsdiv {
                font-size: 13px;
            }

            #sectiontimeslot label, #pkgpricesection span {
                color: white;
            }

            .package-list, #gallerysection {
                overflow-y: scroll;
                min-height: 140px;
                height: 20%;
                overflow-x: hidden;
            }

            .policies th, .policies td, .amenitiesdiv th, .amenitiesdiv td {
                padding: 0;
            }

            .policies, .side-content {
                height: 215px;
            }

            h6 {
                font-size: 20px;
